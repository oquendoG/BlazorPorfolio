<div class="card shadow mb-4">
    <img src="@($"{ApiEndpoints.ServerBaseUrl}/{Post.Thumbnailimage}")" class="card-img-top" alt="Category thumbnail image" />
    <div class="card-body">
        <h3 class="card-title">@Post.Title</h3>
        <p class="text-muted">@Post.PublishDate.Split(' ').First()</p>
        <p class="card-text">@(String.Join(" ", Post.Excerpt.Split().Take(25).ToArray()))</p>
    </div>

    <a href="@($"/blog/{Category.Name.ConvertTitleToURL()}/{Post.Title.ConvertTitleToURL().ToLowerInvariant()}")" class="btn btn-primary stretched-link md-f-size-1-5">
        <i class="fas fa-book"></i> Ver post
    </a>
</div>

@code {
    [Parameter] public Post Post { get; set; }
    [Parameter] public Category Category { get; set; }

}